
<odoo>

    <record id="metrotiles_cancel_contract_view_form" model="ir.ui.view">
        <field name="name">metrotiles.cancel.contract.view.form</field>
        <field name="model">metrotiles.cancel.contract</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="sales_order_id"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_cancel_contract" string="Create" type="object" class="btn-primary"/>
                    <button name="action_create_new" 
                        string="Save/New" 
                        type="object" 
                        class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>