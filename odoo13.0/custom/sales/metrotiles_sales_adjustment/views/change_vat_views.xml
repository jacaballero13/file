<odoo>

    <record id="metrotiles_change_vat_view_form" model="ir.ui.view">
        <field name="name">metrotiles.change.vat.view.form</field>
        <field name="model">metrotiles.change.vat</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="sales_order_id"/>
                        <field name="adjustment_type"/>
                        <field name="current_vat" />
                        <field name="new_vat_type" />
                    </group>
                </sheet>
                <footer>
                    <button name="action_change_vat" string="Create" type="object" class="btn-primary"/>
                    <button name="action_create_new" 
                        string="Save/New" 
                        type="object" 
                        class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>